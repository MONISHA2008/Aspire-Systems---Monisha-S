@model ResourceManageGroup.Models.Recruiter
@{
    ViewData["Title"] = "Forgot Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resource Manage Group</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sample.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tt.css" type="text/css" />
    <style>
        form {
            margin: auto;
            width: 70%;
            text-align: center;
        }
		label {
            display: inline-block;
            width: 120px;
            text-align: left;
        }
        select {
            display: inline-block;
            width: 200px;
            margin-bottom: 10px;
        }

        .submit {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                     <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recruiter" asp-action="LoginR">Login - Page</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="title">Forgot Password</div>
    <br>
                        <form method="post" >
							<div class="mb-1 row">
								<label asp-for="RecruiterEmail" class="col-sm-2 col-form-label">E-Mail</label>
								<div class="form-group">
									<input asp-for="RecruiterEmail" value="@ViewBag.email" type="email" class="form-control"  required>
								    <h6><span asp-validation-for="RecruiterEmail" class="text-center mb-4"></span></h6>
                                </div>
							</div>
                            <div class="form-group">
                                <button type="submit" align="center" class="btn btn-primary rounded submit p-2 px-3">Get Verification Code</button>
                            </div>
                            <div class="form-group">
                                <h6 class="text-center mb-4">@ViewData["Message"]</h6>
                            </div>
                        </form>
        
        
    <br>
    <footer>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <p align="center">Â© Copyrights 2023 Resource Manage Group</p>
            </div>
        </nav>
    </footer>
</body>
</html>